<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:toolbarId="@+id/toolbar"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            app:contentScrim="@color/background"
            app:statusBarScrim="@android:color/transparent"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                android:background="@color/background"
                app:navigationIcon="@drawable/round_arrow_back_ios_24" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Details"
                android:textSize="30sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                android:textColor="@color/darkpurple"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"/>

            <ImageView
                android:id="@+id/imgBell"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="330dp"
                app:srcCompat="@drawable/ic_bell_addmin" />

            <ImageView
                android:id="@+id/imgHome"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="360dp"
                android:layout_marginTop="3dp"
                app:srcCompat="@drawable/ic_home" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="360dp"
                    android:layout_height="862dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="35dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="6dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="862dp">

                        <ImageView
                            android:id="@+id/img_book_cover"
                            android:layout_width="159dp"
                            android:layout_height="127dp"
                            android:layout_marginTop="64dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.497"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:srcCompat="@tools:sample/avatars" />

                        <TextView
                            android:id="@+id/txtUserId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:text="BST01"
                            android:textColor="@color/purpleAdmin"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.093"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/txtStatusBook"
                            android:layout_width="61dp"
                            android:layout_height="18dp"
                            android:layout_marginTop="28dp"
                            android:layout_marginEnd="28dp"
                            android:text="Complete"
                            android:textColor="@color/purpleAdmin"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toEndOf="@+id/txtUserId"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="TextSizeCheck" />

                        <TextView
                            android:id="@+id/txtTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:text="Title :"
                            android:textColor="@color/purpleAdmin"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.123"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/img_book_cover" />

                        <TextView
                            android:id="@+id/txtTitleBook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_marginTop="32dp"
                            android:text="Book "
                            android:textSize="17dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/txtTitle"
                            app:layout_constraintTop_toBottomOf="@+id/img_book_cover" />

                        <TextView
                            android:id="@+id/PenName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="38dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="262dp"
                            android:text="PenName :"
                            android:textColor="@color/purpleAdmin"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

                        <TextView
                            android:id="@+id/txtPenName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_marginTop="20dp"
                            android:text="Pen Name"
                            android:textColor="@color/purpleAdmin"
                            android:textSize="17dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.018"
                            app:layout_constraintStart_toEndOf="@+id/PenName"
                            app:layout_constraintTop_toBottomOf="@+id/txtTitleBook" />

                        <TextView
                            android:id="@+id/txtWrittingDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="38dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="223dp"
                            android:text="Date Written :"
                            android:textColor="@color/purpleAdmin"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/PenName" />

                        <TextView
                            android:id="@+id/DateWritten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="154dp"
                            android:text="1/1/21"
                            android:textColor="@color/purpleAdmin"
                            android:textSize="17dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/txtWrittingDate"
                            app:layout_constraintTop_toBottomOf="@+id/txtPenName" />

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="38dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="222dp"
                            android:text="Date Completed :"
                            android:textColor="@color/purpleAdmin"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/txtWrittingDate" />

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_marginTop="20dp"
                            android:text="1/3/21"
                            android:textColor="@color/purpleAdmin"
                            android:textSize="17dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/textView22"
                            app:layout_constraintTop_toBottomOf="@+id/DateWritten" />

                        <TextView
                            android:id="@+id/textView24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="38dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="232dp"
                            android:text="All episode :"
                            android:textColor="@color/purpleAdmin"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView22" />

                        <TextView
                            android:id="@+id/txtAllEpisodes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_marginTop="20dp"
                            android:text="50 Episode"
                            android:textColor="@color/purpleAdmin"
                            android:textSize="17dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/textView24"
                            app:layout_constraintTop_toBottomOf="@+id/textView23" />

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="38dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="247dp"
                            android:text="Tag :"
                            android:textColor="@color/purpleAdmin"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView24" />

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="225dp"
                            android:text="Tag"
                            android:textColor="@color/purpleAdmin"
                            android:textSize="17dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.153"
                            app:layout_constraintStart_toEndOf="@+id/textView26"
                            app:layout_constraintTop_toBottomOf="@+id/txtAllEpisodes" />

                        <View
                            android:id="@+id/view9"
                            android:layout_width="330dp"
                            android:layout_height="2dp"
                            android:layout_marginVertical="12dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="3dp"
                            android:background="@drawable/divider_line"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.083"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView27" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardReader"
                            android:layout_width="300dp"
                            android:layout_height="90dp"
                            android:layout_margin="16dp"
                            android:layout_marginTop="16dp"
                            app:cardBackgroundColor="@color/background"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="6dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view9">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="16dp">

                                <FrameLayout
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:layout_marginEnd="16dp"
                                    android:background="@drawable/circle_purple_admin">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="12dp"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/ic_reader"
                                        app:tint="@color/white" />
                                </FrameLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    tools:ignore="ExtraText">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Reader Count"
                                        android:textColor="@color/purpleAdmin"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:id="@+id/txtReaderCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/purpleAdmin"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardComment"
                            android:layout_width="300dp"
                            android:layout_height="90dp"
                            android:layout_margin="16dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="26dp"
                            android:layout_marginEnd="44dp"
                            app:cardBackgroundColor="@color/background"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="6dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cardReader">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="16dp">

                                <FrameLayout
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:layout_marginEnd="16dp"
                                    android:background="@drawable/circle_purple_admin">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="12dp"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/ic_comment"
                                        app:tint="@color/white" />
                                </FrameLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    tools:ignore="ExtraText">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Comment Count"
                                        android:textColor="@color/purpleAdmin"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:id="@+id/txtCommentCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/purpleAdmin"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardFav"
                            android:layout_width="300dp"
                            android:layout_height="90dp"
                            android:layout_margin="16dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginEnd="44dp"
                            app:cardBackgroundColor="@color/background"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="6dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cardComment" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="16dp">

                                <FrameLayout
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:layout_marginEnd="16dp"
                                    android:background="@drawable/circle_purple_admin">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="12dp"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/ic_heart_filled"
                                        app:tint="@color/white" />
                                </FrameLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    tools:ignore="ExtraText">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Favorites Count"
                                        android:textColor="@color/purpleAdmin"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:id="@+id/txtFavCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/purpleAdmin"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
